@{
    Layout = "_Layout";
    ViewData["Title"] = "Log in"; 
}

@section Imports
{
    <link rel="stylesheet" type="text/css" href="~/css/auth.css" asp-append-version="true">
}

@section HeaderBtns
{
    <a href="/places">
        <input type="button" class="button" value="Back to places">
    </a>
}

<div class="auth-container">
    <h1 class="form-header">Log in</h1>
    <div class="wrapper">
    	<form class="auth-form" method="post" action="userLogin" autocomplete="off">
    		<input type="email" id="email" name="email" placeholder="email" />
    		<input type="password" id="password" name="password" placeholder="password" />
    		<button type="submit">&#xf0da;</button>
    		<p>haven't an account yet? <a href="/auth/signup">sign up</a></p>
    	</form>
    </div>
</div>